{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "paths": {
      "@nova-ui/core": ["./packages/core/src/index.ts"],
      "@nova-ui/core/styles": ["./packages/core/src/index.css"],
      "@nova-ui/core/*": ["./packages/core/src/components/*/index.ts"]
    },
    "typeRoots": ["./node_modules/@types"],
    "ignoreDeprecations": "5.0"
  },
  "exclude": ["node_modules", "dist"]
}