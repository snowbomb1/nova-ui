{
  "name": "nova-ui-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "dev": "pnpm -C website dev",
    "build:core": "pnpm -C packages/core build",
    "build:website": "pnpm -C website build",
    "build": "pnpm build:core && pnpm build:website",
    "preview": "pnpm -C website preview",
    "test": "pnpm -C packages/core test"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "@eslint/js": "^9.39.1",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}